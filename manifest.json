{
  "manifest_version": 3,
  "name": "Talk to Swami",
  "version": "1.0",
  "description": "A simple Chrome extension that generates random quotes",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab"]
}
